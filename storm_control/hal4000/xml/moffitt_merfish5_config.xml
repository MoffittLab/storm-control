<?xml version="1.0" encoding="ISO-8859-1"?>
<config>

  <!-- The starting directory. -->
  <directory type="directory">C:/Data/</directory>
  
  <!-- The setup name -->
  <setup_name type="string">moffitt_merfish5</setup_name>

  <!-- The ui type, this is 'classic' or 'detached' -->
  <ui_type type="string">detached</ui_type>

  <!--
      This has two effects:
      
      (1) If this is True any exception will immediately crash HAL, which can
      be useful for debugging. If it is False then some exceptions will be
      handled by the modules.
      
      (2) If it is False we also don't check whether messages are valid.
  -->
  <strict type="boolean">True</strict>
  
  <!--
      Define the modules to use for this setup.
  -->
  <modules>

    <!--
	This is the main window, you must have this.
    -->
    <hal>
      <class_name type="string">HalController</class_name>
      <module_name type="string">storm_control.hal4000.hal4000</module_name>
    </hal>

    <!--
	You also need all of these.
    -->

    <!-- Camera display. -->
    <display>
      <class_name type="string">Display</class_name>
      <module_name type="string">storm_control.hal4000.display.display</module_name>
      <parameters>

		<!-- The default color table. Other options are in hal4000/colorTables/all_tables -->
		<colortable type="string">ramp_sat.ctbl</colortable>
	
      </parameters>
    </display>
    
    <!-- Feeds. -->
    <feeds>
      <class_name type="string">Feeds</class_name>
      <module_name type="string">storm_control.hal4000.feeds.feeds</module_name>
    </feeds>

    <!-- Filming and starting/stopping the camera. -->
    <film>
      <class_name type="string">Film</class_name>
      <module_name type="string">storm_control.hal4000.film.film</module_name>

      <!-- Film parameters specific to this setup go here. -->
      <parameters>
		<extension desc="Movie file name extension" type="string" values=",Red,Green,Blue"></extension>
      </parameters>
    </film>

    <!-- Which objective is being used, etc. -->
    <mosaic>
      <class_name type="string">Mosaic</class_name>
      <module_name type="string">storm_control.hal4000.mosaic.mosaic</module_name>

      <!-- List objectives available on this setup here. -->
      <parameters>
		<flip_horizontal desc="Flip image horizontal (mosaic)" type="boolean">True</flip_horizontal>
		<flip_vertical desc="Flip image vertical (mosaic)" type="boolean">True</flip_vertical>
		<transpose desc="Transpose image (mosaic)" type="boolean">True</transpose>

		<objective desc="Current objective" type="string" values="obj1,obj2">obj1</objective>
		<obj1 desc="Objective 1" type="custom">60x,0.1028,0.0,0.0</obj1>
		<obj2 desc="Objective 2" type="custom">10x,0.617,0.0,0.0</obj2>
      </parameters>
    </mosaic>

    <!-- Loading, changing and editting settings/parameters -->
    <settings>
      <class_name type="string">Settings</class_name>
      <module_name type="string">storm_control.hal4000.settings.settings</module_name>
    </settings>

    <!-- Set the time base for films. -->
    <timing>
      <class_name type="string">Timing</class_name>
      <module_name type="string">storm_control.hal4000.timing.timing</module_name>
      <parameters>
		<time_base type="string">camera1</time_base>
      </parameters>
    </timing>
 
    <!-- Camera control. -->
    <!--
	Note that the cameras must have the names "camera1", "camera2", etc..
    -->

	<camera1>
      <class_name type="string">Camera</class_name>
      <module_name type="string">storm_control.hal4000.camera.camera</module_name>
      <camera>
		<master type="boolean">True</master>
		<class_name type="string">PointGreyCameraControl</class_name>
		<module_name type="string">storm_control.hal4000.camera.pointgreyCameraControl</module_name>
		<parameters>
			<!-- Which camera to use -->
			<camera_id type="string">21182029</camera_id>
	  
			<!-- Preset values - camera specific values that are fixed -->
			<presets>
				<!-- FLIR camera general properties -->
				<PixelFormat type="string">Mono16</PixelFormat> <!-- Mono12Packed/Mono12p -->
				<ExposureAuto type="string">Off</ExposureAuto>
				<GainAuto type="string">Off</GainAuto>
				<BlackLevelClampingEnable type="boolean">False</BlackLevelClampingEnable>
		
				<!-- Blackfly specific properties --> 
				<AcquisitionFrameRateEnable type="boolean">True</AcquisitionFrameRateEnable>

				<!-- Properties to control relationship between exposure and frame rate -->
				<CameraControlExposure type="boolean">False</CameraControlExposure>
			</presets>
	  
			<!-- These are the display defaults, not the camera range. -->
			<default_max type="int">200</default_max> 
			<default_min type="int">30</default_min>
			<flip_horizontal type="boolean">False</flip_horizontal>
			<flip_vertical type="boolean">False</flip_vertical>
			<transpose type="boolean">True</transpose>
			
			<!--
					  What value to use for Trigger Activation, 'RisingEdge' or
					  'FallingEdge'. 'FallingEdge' is the default if not specified.
				  -->
		    <!--<trigger_activation type="string">RisingEdge</trigger_activation>
		    <trigger_source type="string">Line0</trigger_source>
			-->

			<!-- These can be changed / editted. -->

			<!-- This is the extension to use (if any) when saving data from this camera. -->
			<extension type="string">c1</extension>
	  
			<!-- Whether or not data from this camera is saved during filming. -->
			<saved type="boolean">True</saved>

		</parameters>
      </camera>
    </camera1>

	<camera2>
      <class_name type="string">Camera</class_name>
      <module_name type="string">storm_control.hal4000.camera.camera</module_name>
      <camera>
		<master type="boolean">True</master>
		<class_name type="string">PointGreyCameraControl</class_name>
		<module_name type="string">storm_control.hal4000.camera.pointgreyCameraControl</module_name>
		<parameters>
			<!-- Which camera to use -->
			<camera_id type="string">21347367</camera_id>
	  
			<!-- Preset values - camera specific values that are fixed -->
			<presets>
				<!-- FLIR camera general properties -->
				<PixelFormat type="string">Mono16</PixelFormat> <!-- Mono12Packed/Mono12p -->
				<ExposureAuto type="string">Off</ExposureAuto>
				<GainAuto type="string">Off</GainAuto>
				<BlackLevelClampingEnable type="boolean">False</BlackLevelClampingEnable>
		
				<!-- Blackfly specific properties --> 
				<AcquisitionFrameRateEnable type="boolean">True</AcquisitionFrameRateEnable>

				<!-- Properties to control relationship between exposure and frame rate -->
				<CameraControlExposure type="boolean">False</CameraControlExposure>
			</presets>
	  
			<!-- These are the display defaults, not the camera range. -->
			<default_max type="int">200</default_max> 
			<default_min type="int">30</default_min>
			<flip_horizontal type="boolean">False</flip_horizontal>
			<flip_vertical type="boolean">False</flip_vertical>
			<transpose type="boolean">True</transpose>
			
			<!--
					  What value to use for Trigger Activation, 'RisingEdge' or
					  'FallingEdge'. 'FallingEdge' is the default if not specified.
				  -->
		    <trigger_activation type="string">RisingEdge</trigger_activation>
		    <trigger_source type="string">Line3</trigger_source>
			
			<!-- These can be changed / editted. -->

			<!-- This is the extension to use (if any) when saving data from this camera. -->
			<extension type="string">c2</extension>
	  
			<!-- Whether or not data from this camera is saved during filming. -->
			<saved type="boolean">True</saved>

		</parameters>
      </camera>
    </camera2>

    <!-- DAQ control -->
    <daq>
		<module_name type="string">storm_control.sc_hardware.nationalInstruments.nidaqModule</module_name>
		<class_name type="string">NidaqModule</class_name>

		<configuration>

			<!-- This is the default timing source to use while filming. "Oversampled"
				 films will use the counter for timing. The counter is driven by the
				 camera fire pin. Other films will just use the camera fire pin directly.
			-->
			<timing>
			  <camera_fire_pin type="string">/Dev1/PFI9</camera_fire_pin>
			  <counter type="string">/Dev1/ctr0</counter>
			  <counter_out type="string">/Dev1/PFI12</counter_out>
			</timing>
			
			<!-- These are the things that we provide DAQ functionality for.
				 Other modules will request them with a 'get functionality'
				 message and "name" = "daq.xxx.yyy". -->
			<ilm750>
			  <do_task>
				<source type="string">/Dev1/port0/line7</source>
			  </do_task>
			</ilm750>

			<ilm635>
			  <do_task>
				<source type="string">/Dev1/port0/line6</source>
			  </do_task>
			</ilm635>

			<ilm545>
			  <do_task>
				<source type="string">/Dev1/port0/line5</source>
			  </do_task>
			</ilm545>

			<ilm518>
			  <do_task>
				<source type="string">/Dev1/port0/line4</source>
			  </do_task>
			</ilm518>

			<ilm473>
			  <do_task>
				<source type="string">/Dev1/port0/line2</source>
			  </do_task>
			</ilm473>

			<ilm445>
			  <do_task>
				<source type="string">/Dev1/port0/line1</source>
			  </do_task>
			</ilm445>

			<ilm405>
			  <do_task>
				<source type="string">/Dev1/port0/line0</source>
			  </do_task>
			</ilm405>

			<ir_laser>
			  <ct_task>
				<source type="string">/Dev1/ctr0</source>
				<frequency type="float">50000</frequency>
			  </ct_task>
			</ir_laser>
	
		</configuration>

    </daq>
	
	<!-- Zaber Z Stage control -->
	<zaber_z>
		<module_name type="string">storm_control.sc_hardware.zaber.zaberFocusModule</module_name>
		<class_name type="string">ZaberZController</class_name>
		<configuration>
			<baudrate type="int">115200</baudrate>
			<port type="string">COM4</port>
			<debug type="boolean">True</debug>

			<stage_id type="int">1</stage_id>
			<unit_to_um type="float">0.001</unit_to_um>
			<z_min type="float">0</z_min>
			<z_max type="float">12500</z_max>
			
			<coarse_focus>
				<minimum type="float">0</minimum>
				<maximum type="float">12500</maximum>
			</coarse_focus>
			
			<fine_focus>
				<center type="float">0.0</center>
				<has_center_bar type="boolean">True</has_center_bar>
				<maximum type="float">100.0</maximum>
				<minimum type="float">-100.0</minimum>
				<warning_high type="float">90.0</warning_high>
				<warning_low type="float">-90.0</warning_low>
			</fine_focus>
			
		</configuration>
	</zaber_z>
	
	<!-- Coarse Focus control GUI. -->
	<coarse_focus>
      <class_name type="string">ZStage</class_name>
      <module_name type="string">storm_control.hal4000.miscControl.zStage</module_name>
	  <configuration>
		<retracted_z type="float">0</retracted_z>
		<can_zero type="boolean">False</can_zero>
		<!--<menu_name type="string">Coarse Focus</menu_name>-->
		<z_stage_fn type="string">zaber_z.coarse_focus</z_stage_fn>
		<large_step type="float">50.0</large_step>
		<small_step type="float">1</small_step>
	  </configuration>
	</coarse_focus>
	
    <!-- Focus lock control GUI. -->
    <focuslock>
      <class_name type="string">FocusLock</class_name>
      <module_name type="string">storm_control.hal4000.focusLock.focusLock</module_name>
      <configuration>
		<ir_laser type="string">ldc_irlaser</ir_laser>
		<ir_power type="int">10</ir_power>
		<lock_modes type="string">NoLockMode,AutoLockMode,AlwaysOnLockMode,HardwareZScanLockMode,OptimalLockMode,CalibrationLockMode</lock_modes>
		<qpd type="string">blackfly_autofocus</qpd>
		<z_stage type="string">zaber_z.fine_focus</z_stage>
		<parameters>
			<scan>
				<offset_threshold type="float">500</offset_threshold><!-- This is in nanometers and get converted by Hal to microns-->
			</scan>
		  <find_sum>
			<step_size type="float">1.0</step_size>
		  </find_sum>
		  <locked>
			<buffer_length type="int">5</buffer_length>
			<offset_threshold type="float">250</offset_threshold><!-- This is in nanometers and get converted by Hal to microns-->
			<lock_gain type="float">0.15</lock_gain>
			<lock_gain_max type="float">0.15</lock_gain_max>
		  </locked>
		  <jump_size type="float">0.1</jump_size>
		</parameters>
      </configuration>
    </focuslock>

    <!-- Illumination (lasers, shutters, etc) control GUI. -->
    <illumination>
      <class_name type="string">Illumination</class_name>
      <module_name type="string">storm_control.hal4000.illumination.illumination</module_name>
      <configuration>

		<!-- Note: The name of the channel is the gui_name.
			 XML tags cannot start with numbers. -->
			<ch1>
			  <gui_name type="string">750</gui_name>
			  <color type="string">128,0,0</color>
			  <digital_modulation>
				<hw_fn_name type="string">daq.ilm750.do_task</hw_fn_name>
			  </digital_modulation>
			</ch1>
			<ch2>
			  <gui_name type="string">635</gui_name>
			  <color type="string">255,0,0</color>
			  <digital_modulation>
				<hw_fn_name type="string">daq.ilm635.do_task</hw_fn_name>
			  </digital_modulation>
			</ch2>
			<ch3>
			  <gui_name type="string">545</gui_name>
			  <color type="string">0,128,0</color>
			  <digital_modulation>
				<hw_fn_name type="string">daq.ilm545.do_task</hw_fn_name>
			  </digital_modulation>
			</ch3>
			<ch4>
			  <gui_name type="string">518</gui_name>
			  <color type="string">0,128,128</color>
			  <digital_modulation>
				<hw_fn_name type="string">daq.ilm518.do_task</hw_fn_name>
			  </digital_modulation>
			</ch4>
			<ch5>
			  <gui_name type="string">473</gui_name>
			  <color type="string">0,128,255</color>
			  
			  <digital_modulation>
				<hw_fn_name type="string">daq.ilm473.do_task</hw_fn_name>
			  </digital_modulation>
			</ch5>
			<ch6>
			  <gui_name type="string">445</gui_name>
			  <color type="string">0,0,255</color>
			  
			  <digital_modulation>
				<hw_fn_name type="string">daq.ilm445.do_task</hw_fn_name>
			  </digital_modulation>
			</ch6>
			<ch7>
			  <gui_name type="string">405</gui_name>
			  <color type="string">255,0,255</color>
			  
			  <digital_modulation>
				<hw_fn_name type="string">daq.ilm405.do_task</hw_fn_name>
			  </digital_modulation>
			</ch7>
		</configuration>
	</illumination>

    <!-- Thorlabs LDC control -->
    <ldc_irlaser>
      <module_name type="string">storm_control.sc_hardware.thorlabs.LDCModule</module_name>
      <class_name type="string">LDCIRLaserModule</class_name>

      <configuration>
		<ct_fn_name type="string">daq.ir_laser.ct_task</ct_fn_name>
      </configuration>
    </ldc_irlaser>
	
    <zaber_xy_stage>
      <module_name type="string">storm_control.sc_hardware.zaber.zaberXYModule</module_name>
      <class_name type="string">ZaberXYStage</class_name>

      <configuration>
		<!-- communication parameters -->
		<baudrate type="int">115200</baudrate>
		<port type="string">COM5</port>
		
		<!-- stage parameters -->
		<stage_id type="int">2</stage_id>
		<unit_to_um type="float">0.15625</unit_to_um>
		<velocity type="float">60000</velocity> <!-- in um/s default 60 mm/s -->
		<x_min type="float">45000</x_min>
		<x_max type="float">56000</x_max>
		<y_min type="float">52000</y_min>
		<y_max type="float">67000</y_max>
      </configuration>
    </zaber_xy_stage>
	
    <!-- Mad City Labs Z piezo -->
    <!--<mcl_zstage>
      <module_name type="string">storm_control.sc_hardware.madCityLabs.mclVoltageZModule</module_name>
      <class_name type="string">MCLVoltageZ</class_name>

      <configuration>
		<parameters>
		  <center type="float">100.0</center>
		  <has_center_bar type="boolean">True</has_center_bar>
		  <maximum type="float">200.0</maximum>
		  <minimum type="float">0.0</minimum>
		  <warning_high type="float">190.0</warning_high>
		  <warning_low type="float">10.0</warning_low>
		</parameters>
		<ao_fn_name type="string">daq.mcl.ao_task</ao_fn_name>
		<microns_to_volts type="float">0.05</microns_to_volts>
      </configuration>
    </mcl_zstage>-->

    <!-- Stage control GUI -->
    <stage>
      <class_name type="string">Stage</class_name>
      <module_name type="string">storm_control.hal4000.stage.stage</module_name>
      <configuration>
		<stage_functionality type="string">zaber_xy_stage</stage_functionality>
      </configuration>
    </stage>

    <!-- TCP control -->
    <tcp_control>
      <module_name type="string">storm_control.hal4000.tcpControl.tcpControl</module_name>
      <class_name type="string">TCPControl</class_name>	    
      <configuration>
		<parallel_mode type="boolean">True</parallel_mode>
		<tcp_port type="int">9000</tcp_port>
      </configuration>
    </tcp_control>
    
	
	<blackfly_autofocus>
      <class_name type="string">PointGreyLockCamera</class_name>
      <module_name type="string">storm_control.sc_hardware.pointGrey.pointGreyLockCameraModule</module_name>
      <configuration>
		<single_spot type="boolean">True</single_spot>
		<parameters>
		  <offset_has_center_bar type="boolean">True</offset_has_center_bar>
		  <offset_maximum type="float">2.5</offset_maximum>
		  <offset_minimum type="float">-2.5</offset_minimum>
		  <offset_warning_high type="float">2.25</offset_warning_high>
		  <offset_warning_low type="float">-2.25</offset_warning_low>	  
		  <sum_maximum type="float">100000.0</sum_maximum>
		  <sum_minimum type="float">50.0</sum_minimum>
		  <sum_warning_low type="float">10000.0</sum_warning_low>
		</parameters>
		<camera_id type="string">21159820</camera_id>
		<camera_parameters>
			<zero_dist type="float">0.0</zero_dist>
			<min_good type="int">1</min_good>
			<offset type="float">0.0</offset>
			<sum_zero type="float">0.0</sum_zero>
			<sum_scale type="float">1.0</sum_scale>
			<reps type="int">1</reps>
			<BlackLevel type="float">0.0</BlackLevel>
			<Gain type="float">10.0</Gain>
			<Height type="int">540</Height>
			<Width type="int">720</Width>
			<OffsetX type="int">0</OffsetX>
			<OffsetY type="int">0</OffsetY>
			<AcquisitionFrameRate type="float">10.0</AcquisitionFrameRate>
			<sigma type="float">3.0</sigma>
			<threshold type="float">10</threshold>
		</camera_parameters>
		<units_to_microns type="float">-0.9</units_to_microns>
	  </configuration>
    </blackfly_autofocus>

    <!-- Zaber Dichroic Cube Turret -->
    <dichroic_turret>
      <module_name type="string">storm_control.sc_hardware.zaber.zaberTurretModule</module_name>
      <class_name type="string">ZaberXFCR06CModule</class_name>
      <configuration>
		<baudrate type="int">115200</baudrate>
		<port type="string">COM3</port>
		<cube_names type="string">1:celesta,2:50-50,3:empty,4:empty,5:empty,6:empty</cube_names>
      </configuration>
    </dichroic_turret>


  </modules>

</config>
